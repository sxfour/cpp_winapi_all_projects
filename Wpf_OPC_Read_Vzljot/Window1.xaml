        <Rectangle Height="160" Margin="10,440,10,0" Stroke="#FF85F1FF" VerticalAlignment="Top" Fill="#FFADF6FF" Opacity="0.85"/>
        <Label Content="ДУ 600" HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="48" Background="#FF66D1FF" Height="75" Opacity="0.85"/>
        <Label Content="ДУ 500" HorizontalAlignment="Center" Margin="0,402,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="48" Background="#FF66D1FF" Height="75" Opacity="0.85"/>
        <Label x:Name="label_pressure_dy600" Content="0.0кгс/см2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="146" Margin="0,215,0,0"/>
