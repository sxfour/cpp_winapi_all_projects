        <TextBlock x:Name="label_status" HorizontalAlignment="Center" Margin="0,617,0,0" TextWrapping="Wrap" Text="Опрос: ожидание..." VerticalAlignment="Top" Width="410" Height="40" FontSize="26" Foreground="Black" Background="#FFFEFF45" TextAlignment="Center" Opacity="0.85"/>
        <Label x:Name="splash_load" Content="Загрузка параметров..." Margin="10,-9,10,75" FontSize="36" RenderTransformOrigin="0.5,0.5" Background="#F2FFFFFF" Opacity="0.9"/>

